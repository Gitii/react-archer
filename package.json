  "scripts": {
    "build": "vite build",
    "build:lib": "vite build --config vite.config.lib.js && tsc --project tsconfig.build.json",
    "deploy:example": "vite build --config vite.config.example.js && gh-pages -d example-dist",
    "prepare": "npm run build:lib",
    "start": "vite dev",
    "test:e2e": "cypress open",
    "test:e2e:update-snapshots": "rm -rf ./cypress/snapshots",
    "test:jest": "jest --config jest.config.cjs ./src/",
    "test:lint": "eslint --cache --ext .ts,.tsx,.js,.tsx src/ example/",
    "test:types": "tsc",
    "test:watch": "jest --config jest.config.cjs ./src/ --watch",
    "test": "yarn test:lint && yarn test:types && yarn test:jest"
