  "type": "module",
  "main": "lib/react-archer.js",
  "module": "lib/react-archer.js",
  "types": "lib/react-archer.d.ts",
  "exports": {
    ".": {
      "types": "./lib/react-archer.d.ts",
      "import": "./lib/react-archer.js"
    }
